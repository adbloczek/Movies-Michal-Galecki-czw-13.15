<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">
    <TextView
        android:id="@+id/movieActors_textView_firstActor"
        android:text="Andrzej Duda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/movieActors_imageView_firstActor"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/movieActors_textView_mainRoles" />
    <TextView
        android:id="@+id/movieActors_textView_secondActor"
        android:text="Jarosław Kaczyński"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/movieActors_imageView_secondActor"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/movieActors_textView_firstActor" />
    <TextView
        android:id="@+id/movieActors_textView_thirdActor"
        android:text="Bronisław Komorowski"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/movieActors_imageView_thirdActor"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@+id/movieActors_textView_secondActor" />

    <ImageView
        android:id="@+id/movieActors_imageView_firstActor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movieActors_textView_mainRoles"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/movieActors_textView_mainRoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starring:"
        android:textSize="18sp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/movieActors_imageView_secondActor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movieActors_imageView_firstActor"
        android:background="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/movieActors_imageView_thirdActor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movieActors_imageView_secondActor"
        android:background="@mipmap/ic_launcher" />

</android.support.constraint.ConstraintLayout>