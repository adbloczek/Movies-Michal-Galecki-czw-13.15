<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum=".99">
    <ImageView
        android:id="@+id/movieImages_imageView_screen1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="33%"
        android:scaleType="center"/>
    <ImageView
        android:id="@+id/movieImages_imageView_screen2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="33%"
        android:scaleType="center"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/movieImages_imageView_screen1" />
    <ImageView
        android:id="@+id/movieImages_imageView_screen3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="34%"
        android:scaleType="center"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/movieImages_imageView_screen2" />
    <ImageView
        android:id="@+id/movieImages_imageView_screen4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="33%"
        android:scaleType="center"
        android:layout_below="@+id/movieImages_imageView_screen1"
        android:layout_alignParentStart="true" />
    <ImageView
        android:id="@+id/movieImages_imageView_screen5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="33%"
        android:scaleType="center"
        android:layout_below="@+id/movieImages_imageView_screen2"
        android:layout_toEndOf="@id/movieImages_imageView_screen4" />
    <ImageView
        android:id="@+id/movieImages_imageView_screen6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="34%"
        android:scaleType="center"
        android:layout_below="@+id/movieImages_imageView_screen3"
        android:layout_toEndOf="@id/movieImages_imageView_screen5" />

</android.support.percent.PercentRelativeLayout>